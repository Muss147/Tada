# ===============================
# TADA MONOREPO - ENV VARIABLES
# ===============================
# This file contains all environment variables needed across the monorepo
# Copy this file to .env in the root and each app directory, then fill in your values

# ===============================
# DATABASE & SUPABASE
# ===============================
DATABASE_URL=postgresql://username:password@host:port/database
DATABASE_URL_DIRECT=postgresql://username:password@host:port/database
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ===============================
# AUTHENTICATION (better-auth)
# ===============================
BETTER_AUTH_SECRET=your_better_auth_secret_32_chars_minimum
APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# OAuth Providers
GOOGLE_CLIENT_ID=your_google_oauth_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret
APPLE_CLIENT_ID=your_apple_client_id
APPLE_CLIENT_SECRET=your_apple_client_secret

# ===============================
# EMAIL SERVICES
# ===============================
# Resend (Transactional emails)
RESEND_API_KEY=re_your_resend_api_key

# SMTP Configuration
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_EMAIL=your_smtp_email@domain.com
SMTP_PASSWORD=your_smtp_password

# ===============================
# PAYMENT PROCESSING (Stripe)
# ===============================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_ACCOUNT_ID=acct_your_stripe_account_id
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# ===============================
# THIRD-PARTY SERVICES
# ===============================
# Redis Cache (Upstash)
UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token

# URL Shortener (Dub)
DUB_API_KEY=dub_your_api_key

# Analytics (OpenPanel)
NEXT_PUBLIC_OPENPANEL_CLIENT_ID=your_openpanel_client_id
OPENPANEL_SECRET_KEY=your_openpanel_secret_key

# Error Monitoring (Sentry)
SENTRY_AUTH_TOKEN=your_sentry_auth_token
NEXT_PUBLIC_SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=your_sentry_project

# Collaboration (Velt)
NEXT_PUBLIC_VELT_API_KEY=your_velt_api_key

# Maps (Mapbox)
NEXT_PUBLIC_MAPBOX=pk.your_mapbox_public_key

# Calendar Scheduling (Cal.com)
NEXT_PUBLIC_CAL_LINK=https://cal.com/your-username

# ===============================
# AI SERVICES
# ===============================
# OpenAI (for quality control & analysis)
OPENAI_API_KEY=sk-proj-your_openai_api_key

# ===============================
# GOOGLE CLOUD (for API services)
# ===============================
PROJECT_ID=your-google-cloud-project-id

# ===============================
# APPLICATION PORTS (Development)
# ===============================
# These are used in different app directories:
# - Main App (apps/app): APP_URL=http://localhost:3000
# - Web App (apps/web): APP_URL=http://localhost:3001  
# - Admin Panel (apps/admin): APP_URL=http://localhost:3002
# - Contributors (apps/contributors): APP_URL=http://localhost:3003